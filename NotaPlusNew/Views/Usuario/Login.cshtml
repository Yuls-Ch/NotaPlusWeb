@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - NotaPlus</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        :root {
            --primary-color: #f05a28;
            --secondary-color: #3ddad7;
            --dark-color: #1a202c;
            --light-color: #f7fafc;
        }

        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, var(--light-color), #ffffff);
            color: var(--dark-color);
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .login-container {
            width: 100%;
            max-width: 420px;
            padding: 20px;
            animation: fadeIn 1s ease forwards;
        }

        .login-card {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .login-header {
            background-color: var(--primary-color);
            color: white;
            padding: 25px;
            text-align: center;
        }

        .login-header h4 {
            margin: 0;
            font-weight: 700;
        }

        .login-body {
            padding: 30px 25px;
        }

        .form-group {
            position: relative;
            margin-bottom: 20px;
        }

        .form-group i {
            position: absolute;
            top: 50%;
            left: 12px;
            transform: translateY(-50%);
            color: #999;
        }

        .form-control {
            padding-left: 2.5rem;
            border-radius: 0.5rem;
            height: 45px;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(240, 90, 40, 0.25);
        }

        .btn-login {
            background-color: var(--primary-color);
            border: none;
            padding: 12px;
            font-weight: 600;
            width: 100%;
            border-radius: 0.5rem;
            transition: background-color 0.3s ease;
        }

        .btn-login:hover {
            background-color: #d1461b;
        }

        .login-footer {
            text-align: center;
            padding: 20px;
            background-color: var(--light-color);
        }

        .login-footer a {
            color: var(--primary-color);
            font-weight: 600;
            text-decoration: none;
        }

        .alert {
            margin-top: 15px;
        }

        @@keyframes fadeIn {
            0% { opacity: 0; transform: translateY(20px); }
            100% { opacity: 1; transform: translateY(0); }
        }

        @@media (max-width: 576px) {
            .login-card {
                border-radius: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="card login-card">
            <div class="login-header">
                <h4><i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión</h4>
            </div>
            <div class="login-body">
                @using (Html.BeginForm("Login", "Usuario", FormMethod.Post))
                {
                    <div class="form-group">
                        <i class="fas fa-envelope"></i>
                        @Html.TextBox("correo", null, new { @class = "form-control", @placeholder = "Correo electrónico" })
                    </div>

                    <div class="form-group">
                        <i class="fas fa-lock"></i>
                        @Html.Password("clave", null, new { @class = "form-control", @placeholder = "Contraseña" })
                    </div>

                    <button type="submit" class="btn btn-login">
                        <i class="fas fa-arrow-right-to-bracket me-1"></i> Ingresar
                    </button>
                }

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Error</div>
                }
            </div>
            <div class="login-footer">
                @Html.ActionLink("¿No tienes cuenta? Regístrate aquí", "Registrar", "Usuario")
            </div>
        </div>
    </div>
</body>
</html>
