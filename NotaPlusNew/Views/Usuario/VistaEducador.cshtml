    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Animación al hacer scroll
            const fadeInObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('show');
                        observer.unobserve(entry.target);
                    }
                });
            }, {
                threshold: 0.2
            });

            document.querySelectorAll('.fade-in').forEach(el => {
                fadeInObserver.observe(el);
            });


            // Ocultar botón "Cerrar Sesión" en navbar cuando el menú colapsa en móvil
            const navLinks = document.querySelector('.nav-links');
            const navToggler = document.querySelector('.navbar-toggler');

            navToggler.addEventListener('click', () => {
                if (navToggler.getAttribute('aria-expanded') === 'true') {
                    // Cuando el menú se abre, el botón de cerrar sesión se vuelve un enlace normal
                    const btnNav = navLinks.querySelector('.btn-nav');
                    if (btnNav) {
                        btnNav.classList.remove('btn-nav');
                    }
                } else {
                    // Cuando el menú se cierra, el botón de cerrar sesión vuelve a ser un botón
                    const btnNav = navLinks.querySelector('a[href="@Url.Action("CerrarSesion", "Usuario")"]');
                    if (btnNav) {
                        btnNav.classList.add('btn-nav');
                    }
                }
            });
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Animación fade-in
            const fadeInObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('show');
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.2 });

            document.querySelectorAll('.fade-in').forEach(el => {
                fadeInObserver.observe(el);
            });

            // Carrusel automático y responsivo
            const track = document.getElementById('carrusel-track');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const item = document.querySelector('.carousel-item');
            let itemWidth = item.offsetWidth + 30;
            let scrollPosition = 0;

            function updateItemWidth() {
                itemWidth = item.offsetWidth + 30;
            }

            window.addEventListener('resize', updateItemWidth);

            function scrollNext() {
                const maxScroll = track.scrollWidth - track.clientWidth;
                scrollPosition = (scrollPosition + itemWidth > maxScroll) ? 0 : scrollPosition + itemWidth;
                track.scrollTo({ left: scrollPosition, behavior: 'smooth' });
            }

            let autoScroll = setInterval(scrollNext, 4000); // cada 4 segundos

            nextBtn.addEventListener('click', () => {
                clearInterval(autoScroll);
                scrollNext();
                autoScroll = setInterval(scrollNext, 4000);
            });

            prevBtn.addEventListener('click', () => {
                clearInterval(autoScroll);
                scrollPosition = Math.max(scrollPosition - itemWidth, 0);
                track.scrollTo({ left: scrollPosition, behavior: 'smooth' });
                autoScroll = setInterval(scrollNext, 4000);
            });

            // Navbar: ocultar botón "Cerrar sesión" cuando se colapsa el menú
            const navLinks = document.querySelector('.nav-links');
            const navToggler = document.querySelector('.navbar-toggler');

            navToggler.addEventListener('click', () => {
                const expanded = navToggler.getAttribute('aria-expanded') === 'true';
                const btnNav = navLinks.querySelector('a[href*="CerrarSesion"]');
                if (btnNav) {
                    btnNav.classList.toggle('btn-nav', !expanded);
                }
            });
        });
    </script>


