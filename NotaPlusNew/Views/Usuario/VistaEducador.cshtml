    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Animación al hacer scroll
            const fadeInObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('show');
                        observer.unobserve(entry.target);
                    }
                });
            }, {
                threshold: 0.2
            });

            document.querySelectorAll('.fade-in').forEach(el => {
                fadeInObserver.observe(el);
            });

            // Carrusel automático
            const carouselTrack = document.getElementById('carrusel-track');
            if (carouselTrack) {
                let currentIndex = 0;
                let itemsPerView = 2; // Default for larger screens
                const totalItems = carouselTrack.querySelectorAll('.carousel-item').length;

                const updateItemsPerView = () => {
                    itemsPerView = window.innerWidth <= 768 ? 1 : 2;
                };

                const updateCarousel = () => {
                    updateItemsPerView();
                    const itemWidth = carouselTrack.firstElementChild.offsetWidth + 20; // item width + gap
                    carouselTrack.style.transform = `translateX(${-currentIndex * itemWidth}px)`;
                };

                setInterval(() => {
                    currentIndex = (currentIndex + 1) % (totalItems - itemsPerView + 1);
                    if (currentIndex > totalItems - itemsPerView) {
                        currentIndex = 0;
                    }
                    updateCarousel();
                }, 3000);

                window.addEventListener('resize', updateCarousel);
                window.onload = updateCarousel;
            }

            // SweetAlert2 example
            // Elimina esta línea si no la necesitas.
            // toastr.success("¡Bienvenida!", "Mensaje de prueba");
        });
