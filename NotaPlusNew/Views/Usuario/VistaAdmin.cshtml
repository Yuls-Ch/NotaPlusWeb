@{
    ViewBag.Title = "Bienvenido Panel de Administrador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4"><i class="fas fa-user-shield me-2"></i>@ViewBag.Title</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 justify-content-center">

        <!-- Usuario -->
        <div class="col">
            <!-- VIST/method - CONTROLADORname -->
            <a href="@Url.Action("ListarUsuarios", "Usuario")" class="btn btn-outline-primary w-100 p-4 shadow rounded">
                <i class="fas fa-users-cog fa-2x mb-2"></i><br />
                Lista de Usuarios
            </a>
        </div>

        <!-- Docente -->
        <div class="col">
            <a href="@Url.Action("Index", "Docente")" class="btn btn-outline-primary w-100 p-4 shadow rounded">
                <i class="fas fa-chalkboard-teacher fa-2x mb-2"></i><br />
                Mantenimiento de Docentes
            </a>
        </div>

        <!-- Curso -->
        <div class="col">
            <a href="@Url.Action("Index", "Curso")" class="btn btn-outline-primary w-100 p-4 shadow rounded">
                <i class="fas fa-book fa-2x mb-2"></i><br />
                Mantenimiento de Cursos
            </a>
        </div>

        <!-- Alumno -->
        <div class="col">
            <a href="@Url.Action("Index", "Alumno")" class="btn btn-outline-primary w-100 p-4 shadow rounded">
                <i class="fas fa-user-graduate fa-2x mb-2"></i><br />
                Mantenimiento de Alumnos
            </a>
        </div>

        <!-- Tipos de Evaluación -->
        <div class="col">
            <a href="@Url.Action("TipoEvaluacion", "TipoEvaluacion")" class="btn btn-outline-info w-100 p-4 shadow rounded">
                <i class="fas fa-tasks fa-2x mb-2"></i><br />
                Tipo de Evaluación
            </a>
        </div>

        <!-- Importar Nómina -->
        <div class="col">
            <a href="@Url.Action("Index", "ImportarAlumnos")" class="btn btn-outline-warning w-100 p-4 shadow rounded">
                <i class="fas fa-file-import fa-2x mb-2"></i><br />
                Importar Nómina de Alumnos
            </a>
        </div>

        <!-- Registro de Notas -->
        <div class="col">
            <a href="@Url.Action("RegistrarNotas", "RegistroNotas")" class="btn btn-outline-success w-100 p-4 shadow rounded">
                <i class="fas fa-floppy-disk fa-2x mb-2"></i><br />
                Registrar Notas
            </a>
        </div>

        <!-- Consultar Libreta -->
        <div class="col">
            <a href="@Url.Action("ConsultarNotas", "ConsultarNotas")" class="btn btn-outline-success w-100 p-4 shadow rounded">
                <i class="fas fa-search fa-2x mb-2"></i><br />
                Consultar Libreta de Notas
            </a>
        </div>
    </div>

</div>

